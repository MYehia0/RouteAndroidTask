<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="product"
            type="com.example.routeandroidtask.data.datasources.response.Product" />
    </data>
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/card_product_background"
        app:cardCornerRadius="22dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_product_background">
            <LinearLayout
                android:id="@+id/product_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/image"
                    imageUrl="@{product.images[0]}"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    tools:src="@tools:sample/backgrounds/scenic" />
                <TextView
                    android:id="@+id/category"
                    android:text="@{product.category}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:textColor="@color/blue_dark"
                    android:textSize="16sp"
                    tools:text="Nike Air Jordan" />

                <TextView
                    android:id="@+id/title"
                    android:text="@{product.title}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:textColor="@color/blue_dark"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Nike shoes flexible for wo.." />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="5dp"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/price_after"
                        android:text='@{ "EGP" + String.valueOf(product.discountPercentage)}'
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/blue_dark"
                        android:textSize="12sp"
                        tools:text="EGP 1,200" />
                    <TextView
                        android:id="@+id/price_before"
                        android:text='@{String.valueOf(product.price) + " EGP"}'
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        paintFlags="@{true}"
                        android:textColor="@color/card_stroke"
                        android:textSize="12sp"
                        tools:text="2000 EGP" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingBottom="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/review"
                        android:text='@{ "Review (" + product.rating + ") " }'
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_dark"
                        android:textSize="12sp"
                        tools:text="Review (4.6) " />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/star"
                        app:riv_corner_radius_top_left="12dp"
                        app:riv_corner_radius_top_right="12dp"/>
                </LinearLayout>


            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/image_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:background="@drawable/fav_product_background"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:padding="5dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_fav"
                    />
                <ImageButton
                    android:id="@+id/image_add"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:background="@drawable/add_product_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/add"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</layout>